<%- include("partials/header.ejs") %>
<main class="main-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 levo-container">
                <nav>
                        <ul>
                          <li><a href="#">This is just a sidebar</a></li>
                          <li><a href="#">With no purpose yet</a></li>
